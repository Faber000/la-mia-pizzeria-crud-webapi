@model Pizza

<div class="container pizza-details-container d-flex align-items-center">
    <image style="width: 400px" src="@Model.Immagine"></image>
    <div class="d-flex flex-column mx-4">
        <h1>@Model.Nome</h1>
        <h2>Categoria: @Model.Category.Titolo</h2>
        <h3>Ingredienti: </h3>
        @foreach (Ingredient ingredient in @Model.Ingredients)
            {
                <div>@ingredient.Name</div>
            }
    </div>
</div>
